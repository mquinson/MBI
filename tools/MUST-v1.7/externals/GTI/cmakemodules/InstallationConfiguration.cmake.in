##
# @file InstallationConfiguration.cmake.in
#       Used to set all the variables that where detected in the find modules to provide
#       a way to load the configuration of an installed GTI.
#
# @author Tobias Hilbrich
# @date 19.11.2010

## TODO: -Keep up to date     

###Fortran
SET (GTI_ENABLE_FORTRAN "@GTI_ENABLE_FORTRAN@" CACHE PATH  "" FORCE)

### GTI version
SET (GTI_VERSION "@GTI_VERSION@")

###MPI
SET (MPI_C_COMPILER "@MPI_C_COMPILER@" CACHE PATH "" FORCE)
SET (MPI_C_COMPILE_FLAGS "@MPI_C_COMPILE_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_C_INCLUDE_PATH "@MPI_C_INCLUDE_PATH@" CACHE PATH "" FORCE)
SET (MPI_C_LINK_FLAGS "@MPI_C_LINK_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_C_LIBRARIES @MPI_C_LIBRARIES@ CACHE PATH "" FORCE)

SET (MPI_CXX_COMPILER "@MPI_CXX_COMPILER@" CACHE PATH "" FORCE)
SET (MPI_CXX_COMPILE_FLAGS "@MPI_CXX_COMPILE_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_CXX_INCLUDE_PATH "@MPI_CXX_INCLUDE_PATH@" CACHE PATH "" FORCE)
SET (MPI_CXX_LINK_FLAGS "@MPI_CXX_LINK_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_CXX_LIBRARIES @MPI_CXX_LIBRARIES@ CACHE PATH "" FORCE)

SET (MPI_Fortran_COMPILER "@MPI_Fortran_COMPILER@" CACHE PATH "" FORCE)
SET (MPI_Fortran_COMPILE_FLAGS "@MPI_Fortran_COMPILE_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_Fortran_INCLUDE_PATH "@MPI_Fortran_INCLUDE_PATH@" CACHE PATH "" FORCE)
SET (MPI_Fortran_LINK_FLAGS "@MPI_Fortran_LINK_FLAGS@" CACHE PATH "" FORCE)
SET (MPI_Fortran_LIBRARIES @MPI_Fortran_LIBRARIES@ CACHE PATH "" FORCE)

SET (CMAKE_CXX_FLAGS "@CMAKE_CXX_FLAGS@" CACHE STRING "" FORCE)
SET (CMAKE_C_FLAGS "@CMAKE_C_FLAGS@" CACHE STRING "" FORCE)
SET (CMAKE_Fortran_FLAGS "@CMAKE_Fortran_FLAGS@" CACHE STRING "" FORCE)
STRING(REPLACE ";" " " CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS}")

SET (MPIEXEC "@MPIEXEC@" CACHE PATH "" FORCE)
SET (MPIEXEC_NUMPROC_FLAG "@MPIEXEC_NUMPROC_FLAG@" CACHE PATH "" FORCE)
SET (MPIEXEC_PREFLAGS "@MPIEXEC_PREFLAGS@" CACHE PATH "" FORCE)
SET (MPIEXEC_POSTFLAGS "@MPIEXEC_POSTFLAGS@" CACHE PATH "" FORCE)

SET (MPI_CXX_SKIP_FLAGS "@MPI_CXX_SKIP_FLAGS@" CACHE STRING "" FORCE)

SET (HAVE_MPI_NO_CONST_CORRECTNESS @HAVE_MPI_NO_CONST_CORRECTNESS@ CACHE INTERNAL "" FORCE)
SET (HAVE_MPI_ADDRESS_CONST_CORRECT @HAVE_MPI_ADDRESS_CONST_CORRECT@ CACHE INTERNAL "" FORCE)
SET (HAVE_MPI_TYPE_HINDEXED_CONST_CORRECT @HAVE_MPI_TYPE_HINDEXED_CONST_CORRECT@ CACHE INTERNAL "" FORCE)
SET (HAVE_MPI_TYPE_STRUCT_CONST_CORRECT @HAVE_MPI_TYPE_STRUCT_CONST_CORRECT@ CACHE INTERNAL "" FORCE)

###PnMPI
#TODO currently computed by GTI
SET (PnMPI_HOME "@PnMPI_HOME@" CACHE PATH "" FORCE)
SET (PnMPI_LIBRARY_DIR "@PnMPI_LIBRARY_DIR@" CACHE PATH "" FORCE)
SET (PNMPI_PATCHER "@PNMPI_PATCHER@" CACHE FILEPATH "" FORCE)
SET (PNMPI_LIB_NAME "@PNMPI_LIB_NAME@" CACHE FILEPATH "" FORCE)
SET (PNMPI_Fortran_LIB_NAME "@PNMPI_Fortran_LIB_NAME@" CACHE FILEPATH "" FORCE)

SET (PnMPI_C_LIBRARIES "@PnMPI_C_LIBRARIES_REAL@" CACHE STRING "" FORCE)
SET (PnMPI_Fortran_LIBRARIES "@PnMPI_Fortran_LIBRARIES_REAL@" CACHE STRING "" FORCE)
SET (PnMPI_INCLUDE_DIR "@PnMPI_INCLUDE_DIR@" CACHE PATH "" FORCE)

# Thread safety
SET (GTI_THREAD_SAFETY "@GTI_THREAD_SAFETY@" CACHE BOOL "Does GTI implement thread-safety" FORCE)
SET (CMAKE_CXX_STANDARD "@CMAKE_CXX_STANDARD@")
SET (CMAKE_CXX_STANDARD_REQUIRED "@CMAKE_CXX_STANDARD_REQUIRED@")
